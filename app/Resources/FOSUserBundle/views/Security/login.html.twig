{% extends "FOSUserBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</h3>
                </div>
                <div class="panel-body">
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                                <div class="form-group">
                                    <label for="username">{{ 'security.login.username'|trans }}</label>
                                    <input class="form-control" type="text" id="username" name="_username"
                                           value="superadmin"
                                           required="required"/>
                                </div>
                                <div class="form-group">
                                    <label for="password">{{ 'security.login.password'|trans }}</label>
                                    <input class="form-control" type="password" id="password" name="_password"
                                           value="superadmin" required="required"/>
                                </div>
                                {#<div class="form-group">#}
                                    {#<a class="txt-color-main-2 small" href="{{ path('fos_user_resetting_request') }}"#}
                                       {#title="Mot de passe oublié ?">#}
                                        {#Mot de passe oublié ?#}
                                    {#</a>#}
                                {#</div>#}
                                <div class="form-group">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                                </div>
                                <hr/>
                                <div class="row">
                                    <div class="col-md-12">
                                        <input class="btn btn-success pull-right" type="submit" id="_submit" name="_submit"
                                               value="{{ 'security.login.submit'|trans }}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}

